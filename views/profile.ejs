    <script>
        // Edit mode toggle
        let editMode = false;

        function toggleEditMode() {
            editMode = !editMode;
            const cards = document.querySelectorAll('.card');
            const editBtn = document.querySelector('.edit-btn');
            
            if (editMode) {
                cards.forEach(card => card.classList.add('edit-mode'));
